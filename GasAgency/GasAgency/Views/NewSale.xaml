<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GasAgency.Views.NewSale"
             xmlns:combobox="clr-namespace:Syncfusion.XForms.ComboBox;assembly=Syncfusion.SfComboBox.XForms"
             xmlns:numeric="clr-namespace:Syncfusion.SfNumericUpDown.XForms;assembly=Syncfusion.SfNumericUpDown.XForms">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="Medium"/>
                <Setter Property="VerticalOptions" Value="Center"/>
            </Style>
        </ResourceDictionary>

    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <Grid Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Text="Product: " 
                       Grid.Row="0" 
                       Grid.Column="0"/>
                <combobox:SfComboBox HeightRequest="40" 
                                     x:Name="comboProduct"
                                     Grid.Row="0" 
                                     Grid.Column="1" 
                                     DataSource="{Binding Products}" 
                                     DisplayMemberPath="Name"
                                     SelectionChanged="comboBox_SelectionChanged"/>

                <Label Text="Quantity: " 
                       Grid.Row="1" 
                       Grid.Column="0"/>
                <numeric:SfNumericUpDown x:Name="numericQuantity"
                                         Grid.Row="1" 
                                         Grid.Column="1"
                                         SpinButtonAlignment="Right"/>

                <Label Text="Cost: " 
                       Grid.Row="2" 
                       Grid.Column="0"/>
                <numeric:SfNumericUpDown x:Name="numericCost" 
                                         Grid.Row="2" 
                                         Grid.Column="1"
                                         SpinButtonAlignment="Right" 
                                         FormatString="c" 
                                         ParsingMode="Decimal"/>

                <Label Text="Mode: " 
                       Grid.Row="3" 
                       Grid.Column="0"/>
                <combobox:SfComboBox HeightRequest="40" 
                                     x:Name="comboMode"
                                     Grid.Row="3" 
                                     Grid.Column="1" 
                                     DataSource="{Binding Modes}"
                                     DisplayMemberPath="Name"
                                     SelectionChanged="comboMode_SelectionChanged">

                </combobox:SfComboBox>

                <Label Text="Client Name: " 
                       Grid.Row="4" 
                       Grid.Column="0"/>
                <combobox:SfComboBox HeightRequest="40" 
                                     x:Name="comboClients"
                                     Grid.Row="4" 
                                     Grid.Column="1" 
                                     DataSource="{Binding Clients}"    
                                     DisplayMemberPath="Name"
                                     SelectionChanged="comboClients_SelectionChanged"/>

                <StackLayout Orientation="Horizontal"
                             Grid.Row="6"
                             Grid.ColumnSpan="2"
                             HorizontalOptions="EndAndExpand">

                    <Button Text="Cancel" 
                            CornerRadius="10" 
                            Margin="10, 0, 10, 10" 
                            BackgroundColor="#396ec3"
                            TextColor="White" 
                            HorizontalOptions="End" 
                            Grid.Row="1" 
                            Command="{Binding CancelCommand}"/>
                    <Button Text="Save" 
                            CornerRadius="10" 
                            Margin="10, 0, 10, 10" 
                            BackgroundColor="#396ec3"
                            TextColor="White" 
                            HorizontalOptions="End"
                            Grid.Row="1" 
                            Command="{Binding SaveCommand}"/>
                </StackLayout>

            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>